%article
  - if notice
    %aside{:id=>"notice"}= notice

  %h2 Your Cart
  %table
    - @cart.line_items.each do |item|
      %tr
        %td{:class=>"quantity"}= item.quantity
        %td= item.product.title
        %td{:class=>"price"}=number_to_currency(item.total_price)
  %tfoot
    %tr
      %th{:colspan=>"2"}
        Total:
      %td{:class=>"price"}=number_to_currency(@cart.total_price)
  = button_to 'Empty cart', @cart, method: :delete, data:{confirm: 'Are you sure?'}
